<div tal:define="id widget.htmlId()" id="${id}">
  <input type="hidden"
         size="30"
         class="${widget.htmlClass()}"
         name="${widget.identifier}"
         value="${widget.inputValue()}"
         id="${id}-input" />

  <div class="field-tree-widget">
    <ul tal:content="structure widget.HTMLTree()" />
  </div>

</div>
