<div class="newsitemlistitem"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="silva_news">
  <h3 class="heading newsitemheading" tal:content="structure context/get_title"/>
  <div class="newsiteminfo">
    <div class="publicationdate" tal:condition="view/article_date">
      <span class="label" i18n:translate="">Publication date:</span>
      <span class="value" tal:content="view/article_date" />
    </div>
  </div>
  <div class="newsintro">
   <img
     tal:define="classname string:newsitem-thumbnail"
     tal:replace="structure python: content.get_thumbnail(classname)"
    />
   <tal:insertintro replace="structure view/article" />
  </div>
  <p class="p articlelink">
   <a href="#" tal:attributes="href context/@@absolute_url" i18n:translate="">
    view article
   </a>
  </p>
</div>
